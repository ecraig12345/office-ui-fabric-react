{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "outDir": "lib",
    "lib": ["es2017", "dom"],
    "types": ["webpack-env", "jest", "markdown-to-jsx"],
    "typeRoots": ["./typings", "node_modules/@types"]
  },
  "include": ["src"]
}
